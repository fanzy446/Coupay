<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:background="@color/ivory" >

    <TextView
        android:id="@+id/tv_TRLVgroup_mounth_label"
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:drawableRight="@drawable/orange_divide"
        android:gravity="center" />

    <TextView
        android:id="@+id/tv_TRLVgroup_income_amount_label"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_toLeftOf="@+id/tv_TRLVgroup_outcome_amount_label"
        android:layout_toRightOf="@+id/tv_TRLVgroup_mounth_label"
        android:gravity="center" />

    <TextView
        android:id="@+id/tv_TRLVgroup_outcome_amount_label"
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:gravity="center" />

</RelativeLayout>