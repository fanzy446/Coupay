<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="250dp"
    android:layout_height="250dp"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="2" >

        <ImageButton
            android:id="@+id/ib_mychoicebutton_image0"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#00ffffff"
            android:contentDescription="@string/iv_userportrait_contentDescription"
            android:scaleType="fitXY"
            android:src="@drawable/pay_out" />

        <ImageButton
            android:id="@+id/ib_mychoicebutton_image1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.00"
            android:background="#00ffffff"
            android:contentDescription="@string/iv_userportrait_contentDescription"
            android:scaleType="fitXY"
            android:src="@drawable/society_out" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="2" >

        <ImageButton
            android:id="@+id/ib_mychoicebutton_image2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#00ffffff"
            android:contentDescription="@string/iv_userportrait_contentDescription"
            android:scaleType="fitXY"
            android:src="@drawable/code_out" />

        <ImageButton
            android:id="@+id/ib_mychoicebutton_image3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#00ffffff"
            android:contentDescription="@string/iv_userportrait_contentDescription"
            android:scaleType="fitXY"
            android:src="@drawable/management_out" />
    </LinearLayout>

</LinearLayout>